<?xml version="1.0" encoding="UTF-8"?>

<?import com.nklymok.mindspace.controller.PriorityPaneController?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import tornadofx.control.DateTimePicker?>

<?import com.nklymok.mindspace.component.PriorityComboBox?>
<?import com.nklymok.mindspace.component.RepetitionComboBox?>
<BorderPane maxHeight="350.0" maxWidth="350.0" minHeight="350.0" minWidth="350.0" prefHeight="350.0" prefWidth="350.0"
            styleClass="editor-background" stylesheets="@../styles/TaskBuilder_styles.css"
            xmlns="http://javafx.com/javafx/8.0.261" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <GridPane maxHeight="350.0" maxWidth="350.0" minHeight="350.0" minWidth="350.0" prefHeight="350.0"
                  prefWidth="350.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="12.0" minHeight="12.0" prefHeight="12.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="12.0" minHeight="12.0" prefHeight="12.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="100.0" minHeight="100.0" prefHeight="100.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="12.0" minHeight="12.0" prefHeight="12.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="20.0" minHeight="20.0" prefHeight="20.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button id="exitButton" fx:id="exitButton" mnemonicParsing="false" styleClass="button-exit"
                        GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.valignment="TOP">
                    <graphic>
                        <FontIcon id="closeButton" iconLiteral="fa-close" iconSize="16"/>
                    </graphic>
                </Button>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="header" text="Task info"
                      GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="TOP">
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                </Text>
                <Button id="saveAndExitButton" fx:id="saveAndExitButton" alignment="CENTER" maxHeight="25.0"
                        maxWidth="80.0" minHeight="25.0" minWidth="80.0" mnemonicParsing="false" prefHeight="25.0"
                        prefWidth="80.0" styleClass="button-edit" text="Edit" textAlignment="CENTER"
                        GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="8"
                        GridPane.valignment="CENTER">
                    <graphic>
                        <FontIcon iconLiteral="fa-edit" iconSize="16" text=""/>
                    </graphic>
                </Button>
                <FontIcon iconLiteral="mdi-label-outline" text="" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="10.0"/>
                    </GridPane.margin>
                </FontIcon>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="label" text="Header" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="25.0"/>
                    </GridPane.margin>
                </Text>
                <TextField id="fieldHeader" fx:id="fieldHeader" maxHeight="25.0" maxWidth="180.0" minHeight="25.0"
                           minWidth="180.0" prefHeight="25.0" prefWidth="180.0" promptText="Header Text"
                           styleClass="txtfield-editor" GridPane.rowIndex="2">
                    <padding>
                        <Insets top="5.0"/>
                    </padding>
                    <GridPane.margin>
                        <Insets left="10.0"/>
                    </GridPane.margin>
                </TextField>
                <FontIcon iconLiteral="mdi-clipboard-text" GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets left="10.0"/>
                    </GridPane.margin>
                </FontIcon>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="label" text="Description"
                      GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets left="25.0"/>
                    </GridPane.margin>
                </Text>
                <TextArea id="fieldDescription" fx:id="fieldDescription" maxHeight="80.0" maxWidth="180.0"
                          minHeight="80.0" minWidth="180.0" prefHeight="80.0" prefWidth="180.0"
                          promptText="Description Text" styleClass="txtarea-editor" GridPane.rowIndex="4">
                    <GridPane.margin>
                        <Insets left="10.0"/>
                    </GridPane.margin>
                </TextArea>
                <FontIcon iconLiteral="mdi-calendar-blank" GridPane.rowIndex="5">
                    <GridPane.margin>
                        <Insets left="10.0"/>
                    </GridPane.margin>
                </FontIcon>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="toggle-label" text="Due Date"
                      GridPane.rowIndex="5">
                    <font>
                        <Font size="8.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets left="25.0"/>
                    </GridPane.margin>
                </Text>
                <DateTimePicker id="dateTimePicker" fx:id="dateTimePicker" format="dd MMM uuuu HH:mm" maxHeight="18.0"
                                maxWidth="180.0" minHeight="18.0" minWidth="180.0" prefHeight="18.0" prefWidth="180.0"
                                styleClass="date-picker-editor" GridPane.rowIndex="6">
                    <GridPane.margin>
                        <Insets left="10.0"/>
                    </GridPane.margin>
                </DateTimePicker>
                <FontIcon iconLiteral="mdi-repeat" GridPane.columnIndex="2" GridPane.rowIndex="5">
                    <GridPane.margin>
                        <Insets left="10.0"/>
                    </GridPane.margin>
                </FontIcon>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="toggle-label" text="Repeat"
                      GridPane.columnIndex="2" GridPane.rowIndex="5">
                    <font>
                        <Font size="8.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets left="25.0"/>
                    </GridPane.margin>
                </Text>
                <RepetitionComboBox id="repetitionComboBox" fx:id="repetitionComboBox" maxHeight="20.0" maxWidth="80.0"
                          minHeight="20.0" minWidth="80.0" prefHeight="20.0" prefWidth="80.0" promptText="Daily"
                          GridPane.columnIndex="2" GridPane.rowIndex="6">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <padding>
                        <Insets top="-1.0"/>
                    </padding>
                    <GridPane.margin>
                        <Insets left="10.0"/>
                    </GridPane.margin>
                </RepetitionComboBox>
                <FontIcon iconLiteral="mdi-alert-circle-outline" GridPane.columnIndex="2" GridPane.halignment="CENTER"
                          GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets right="50.0"/>
                    </GridPane.margin>
                </FontIcon>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="toggle-label" text="Priority"
                      GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                </Text>
                <PriorityComboBox id="priorityComboBox" fx:id="priorityComboBox" maxHeight="15.0" maxWidth="15.0"
                          minHeight="15.0" minWidth="15.0" prefHeight="15.0" prefWidth="15.0" GridPane.columnIndex="2"
                          GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="TOP">
                    <GridPane.margin>
                        <Insets left="45.0"/>
                    </GridPane.margin>
                </PriorityComboBox>
                <PriorityPaneController id="comboBoxIndicatorPane" fx:id="comboBoxIndicatorPane" maxHeight="15.0"
                                        maxWidth="15.0" minHeight="15.0" minWidth="15.0" prefHeight="15.0"
                                        prefWidth="15.0" styleClass="no-priority-indicator"
                                        stylesheets="@../styles/priority_styles.css" GridPane.columnIndex="2"
                                        GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="TOP">
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                </PriorityPaneController>
            </children>
        </GridPane>
    </center>
</BorderPane>